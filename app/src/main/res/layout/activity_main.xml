<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <TextView
        android:id="@+id/visor"
        android:layout_width="0dp"
        android:layout_height="223dp"
        android:layout_marginStart="16dp"
        android:layout_marginLeft="16dp"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="16dp"
        android:layout_marginRight="16dp"
        android:background="#AEABB3"
        android:textSize="36sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.498"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <androidx.gridlayout.widget.GridLayout
        android:id="@+id/gridLayout"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginLeft="16dp"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="16dp"
        android:layout_marginRight="16dp"
        android:clipToPadding="false"
        app:columnCount="4"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/visor"
        app:layout_constraintVertical_bias="0.0"
        app:useDefaultMargins="true"
        tools:ignore="MissingConstraints">

        <Button
            android:id="@+id/btn1"
            android:layout_width="75dp"
            android:layout_height="wrap_content"
            android:text="1"
            android:textSize="23sp"
            app:layout_column="0"
            app:layout_row="0" />

        <Button
            android:id="@+id/btn2"
            android:layout_width="75dp"
            android:layout_height="wrap_content"
            android:text="2"
            android:textSize="23sp"
            app:layout_column="1"
            app:layout_row="0" />

        <Button
            android:id="@+id/btn3"
            android:layout_width="75dp"
            android:layout_height="wrap_content"
            android:text="3"
            android:textSize="23sp"
            app:layout_column="2"
            app:layout_row="0" />

        <Button
            android:id="@+id/addiction"
            android:layout_width="75dp"
            android:layout_height="wrap_content"
            android:text="+"
            android:textSize="23sp"
            app:backgroundTint="#D83F3F"
            app:layout_column="3"
            app:layout_row="0" />

        <Button
            android:id="@+id/btn4"
            android:layout_width="75dp"
            android:layout_height="wrap_content"
            android:text="4"
            android:textSize="23sp"
            app:layout_column="0"
            app:layout_row="1" />

        <Button
            android:id="@+id/btn5"
            android:layout_width="75dp"
            android:layout_height="wrap_content"
            android:text="5"
            android:textSize="23sp"
            app:layout_column="1"
            app:layout_row="1" />

        <Button
            android:id="@+id/btn6"
            android:layout_width="75dp"
            android:layout_height="wrap_content"
            android:text="6"
            android:textSize="23sp"
            app:layout_column="2"
            app:layout_row="1" />

        <Button
            android:id="@+id/subtraction"
            android:layout_width="75dp"
            android:layout_height="wrap_content"
            android:text="-"
            android:textSize="23sp"
            app:backgroundTint="#D83F3F"
            app:layout_column="3"
            app:layout_row="1" />

        <Button
            android:id="@+id/btn7"
            android:layout_width="75dp"
            android:layout_height="wrap_content"
            android:text="7"
            android:textSize="23sp"
            app:layout_column="0"
            app:layout_row="2" />

        <Button
            android:id="@+id/btn8"
            android:layout_width="75dp"
            android:layout_height="wrap_content"
            android:text="8"
            android:textSize="23sp"
            app:layout_column="1"
            app:layout_row="2" />

        <Button
            android:id="@+id/btn9"
            android:layout_width="75dp"
            android:layout_height="wrap_content"
            android:text="9"
            android:textSize="23sp"
            app:layout_column="2"
            app:layout_row="2" />

        <Button
            android:id="@+id/multiplication"
            android:layout_width="75dp"
            android:layout_height="wrap_content"
            android:text="*"
            android:textSize="23sp"
            app:backgroundTint="#D83F3F"
            app:layout_column="3"
            app:layout_row="2" />

        <Button
            android:id="@+id/btn0"
            android:layout_width="75dp"
            android:layout_height="wrap_content"
            android:text="0"
            android:textSize="23sp"
            app:layout_column="0"
            app:layout_row="3" />

        <Button
            android:id="@+id/btn15"
            android:layout_width="75dp"
            android:layout_height="wrap_content"
            android:paddingLeft="24dp"
            android:textColor="#20D813"
            android:textSize="23sp"
            app:backgroundTint="#20D813"
            app:icon="@drawable/ic_baseline_backspace_24"
            app:layout_column="1"
            app:layout_row="3"
            tools:visibility="visible" />

        <Button
            android:id="@+id/point"
            android:layout_width="75dp"
            android:layout_height="wrap_content"
            android:text="."
            android:textSize="23sp"
            app:backgroundTint="#D83F3F"
            app:layout_column="2"
            app:layout_row="3" />

        <Button
            android:id="@+id/division"
            android:layout_width="75dp"
            android:layout_height="wrap_content"
            android:text="/"
            android:textSize="23sp"
            app:backgroundTint="#D83F3F"
            app:layout_column="3"
            app:layout_row="3" />

        <Button
            android:id="@+id/squareRoot"
            android:layout_width="75dp"
            android:layout_height="wrap_content"
            android:paddingLeft="24dp"
            android:textSize="14sp"
            app:backgroundTint="#F39420"
            app:icon="@drawable/ic_baseline_square_foot_24"
            app:layout_column="0"
            app:layout_row="4" />

        <Button
            android:id="@+id/cubicRoot"
            android:layout_width="75dp"
            android:layout_height="wrap_content"
            android:paddingLeft="24dp"
            android:textSize="14sp"
            app:backgroundTint="#F39420"
            app:icon="@drawable/ic_baseline_square_foot_24"
            app:layout_column="1"
            app:layout_row="4" />

        <Button
            android:id="@+id/clear"
            android:layout_width="75dp"
            android:layout_height="wrap_content"
            android:text="AC"
            android:textSize="23sp"
            app:backgroundTint="#20D813"
            app:layout_column="2"
            app:layout_row="4" />

        <Button
            android:id="@+id/equals"
            android:layout_width="75dp"
            android:layout_height="wrap_content"
            android:text="="
            android:textSize="23sp"
            app:backgroundTint="#1B6A67"
            app:layout_column="3"
            app:layout_row="4" />

    </androidx.gridlayout.widget.GridLayout>

</androidx.constraintlayout.widget.ConstraintLayout>